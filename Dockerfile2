# get jenkins image from the same jenkins we are using
FROM jenkins
# execute the code below with privilege user root
USER root

#download docker client, move the docker binary to /usr/local/bin/, add docker group, make jenkins have access 

RUN mkdir -p /tmp/download && \
 curl -L https://download.docker.com/linux/static/stable/x86_64/docker-18.03.1-ce.tgz | tar -xz -C /tmp/download && \
 rm -rf /tmp/download/docker/dockerd && \
 mv /tmp/download/docker/docker* /usr/local/bin/ && \
 rm -rf /tmp/download && \
 groupadd -g 999 docker && \
 usermod -aG staff,docker jenkins

user jenkins
